*:focus{ outline:none; }
body{ font-size:70%;}

label[for] { cursor:pointer; }
label[for]:hover{ text-decoration:underline;}
/* remove padding and scrolling from elements that contain an Accordion OR a content-div */
.ui-layout-center ,	/* has content-div */
.ui-layout-west ,	/* has Accordion */
.ui-layout-east ,	/* has content-div ... */
.ui-layout-east .ui-layout-content { /* content-div has Accordion */
    padding: 0;
    overflow: hidden;
}
.ui-layout-center P.ui-layout-content {
    line-height:	1.4em;
    margin:			0; /* remove top/bottom margins from <P> used as content-div */
}
h3, h4 { /* Headers & Footer in Center & East panes */
    font-size:		1.1em;
    background:		#EEF;
    border:			1px solid #BBB;
    border-width:	0 0 1px;
    padding:		7px 10px;
    margin:			0;
}
.ui-layout-east h4 { /* Footer in East-pane */
    font-size:		0.9em;
    font-weight:	normal;
    border-width:	1px 0 0;
}
#tabs { height: 100%;}
#tabs .tabs-spacer { float: left; height: auto; }
.tabs-bottom .ui-tabs-nav li span{float: right; 
                                  vertical-align:text-top;
                                  cursor:pointer;}


.tabs-bottom .ui-tabs-nav { clear: left; padding: 0 .2em .2em .2em; }
.tabs-bottom .ui-tabs-nav li { top: auto; bottom: 0; margin: 0 .2em 1px 0; border-bottom: auto; border-top: 0; }
.tabs-bottom .ui-tabs-nav li.ui-tabs-active { margin-top: -1px; padding-top: 1px; }

.custom-tap{
    margin: 1px 0.2em 0 0;
    padding: 0;
    top: 0;
}

#loading {
    position:absolute;
    font-weight:bold;
    text-transform:capitalize;
    font-size:12px;
    padding:2px;
    left: 462px;
    top: 50px;
    vertical-align:bottom;
    line-height:20px;
    cursor:wait;
}
#loading img{ padding-top:1px; padding-right:4px;}
#jAlert{
    font-size: 1.3em;
    padding: 1em;
    text-align: left;
    white-space: nowrap;
    width: auto;
    word-wrap: normal;
}

form fieldset label{ 
    clear:both; float:left; width:27%; 
    vertical-align:middle; 
    margin:2px 0px 2px 0px; font-weight:bold;}
form fieldset input, form fieldset select, 
form fieldset textarea ,form fieldset span.ui-spinner { 
    width:70%; 
    margin:2px 0px 2px 0px;  font-size: 1em; 
    font-weight:bold; height:18px;

}

form fieldset span.ui-spinner,
form fieldset select { height:22px;}
form fieldset textarea { height:36px;}  

span.firma{
    display: block;
    margin-right: 50px;
    float:  right;
    font-size: 10px;
    color: #999;
    text-align: left;
}