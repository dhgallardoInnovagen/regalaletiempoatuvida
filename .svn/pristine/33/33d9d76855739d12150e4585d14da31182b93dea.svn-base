header{
	width: 100%;
	height: 20%;
	background-image: url("../images/barra-superior.png");
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
}

.logosCCU{
	width: 20%;
	height: 100%;
	background-image: url("../images/logos.png");
	background-size: contain;
	background-position: center;
	background-repeat: no-repeat;
	display: inline-block;
	position: relative;
}

body {
	width: 100%;
	height: 100%;
	background-image: url("../images/fondoLoginX2.jpg");
	background-size: cover;
	background-position: center;
	background-repeat: no-repeat;
	background-attachment: fixed;
	font-family: "Comfortaa";
	font-size: 14px;
	text-align: justify;
	color: #E6E8E8;
	-moz-background-size: cover;
	-o-background-size: cover;
}

#logos{
	position: absolute;
	right: 0%;
}

#pmassa{
	position: absolute;
	top: 40%;
	left: 50%;
	width: 24%;
	margin-left: -11%;
	margin-top: -9%;
}

#login_box {
	position: absolute;
	top: 45%;
	left: 50%;
	transform: translate(-50%,-50%);
	border-radius: 0.5em;
	text-align: center;
	padding: 1em 3em 2em 3em;
	background: rgba(0, 120, 127, 0.80);
	box-shadow: rgba(0, 0, 0, 0.8) 2px 10px 12px;
	width: 25%;
}

#login_box>img{

}

#logo_psam {
	position: absolute;
	right: 0%;
	bottom: 5%;
	width: 25%;
}

#footer{
	position: absolute;
	width: 100%;
	background-image: url("../images/barra-inferior.png");
	background-size: cover;
	text-align: center;
	bottom: 0%;
	background-repeat: no-repeat;
	padding: 5px;
	background-color: transparent;
}
#footer .texto{
	text-align: left;
	padding-left: 60px;
}
#footer img{
	width: 90%;
}
@media (max-width: 1200px) {
	#pmassa{
		width: 14%;
		margin-top: -13%;
		margin-left: -12%;
	}
	#login_box{
		width: 24%;
		margin-top: -12%;
		margin-left: -12%;
	}
	#logo_psam{
		width: 25%;
	}
}

@media (max-width: 992px) {
	#pmassa{
		width: 14%;
		margin-top: -14%;
		margin-left: -14%;
	}
	#login_box{
		width: 28%;
		margin-top: -14%;
		margin-left: -14%;
	}
	#logo_psam{
		width: 30%;
	}
}

@media (max-width: 768px) {
	#logos{
		width: 50%;
	}
	#pmassa{
		width: 16%;
		margin-top: -17%;
		margin-left: -17%;
	}
	#login_box{
		width: 34%;
		padding: 1.5em;
		margin-top: -17%;
		margin-left: -17%;
	}
	.form-group {
		margin-bottom: 10px;
	}
	#login_box>img{
		width: 20%;
	}
	#logo_psam{
		width: 35%;
	}
	#footer{
		font-size: 10px;
	}
}

@media (max-width: 510px) {
	#logos{
		width: 70%;
	}
	#pmassa{
		width: 15%;
		margin-top: -23%;
		margin-left: -20%;
		top: 45%
	}
	#login_box{
		width: 40%;
		padding: 0.5em;
		margin-top: -20%;
		margin-left: -20%;
	}
	.form-group {
		margin-bottom: 5px;
	}
	#login_box>img{
		width: 15%;
	}
	#logo_psam{
		width: 35%;
	}
	#footer{
		font-size: 8px;
	}
}

.row{
	margin-right: -0px;
	margin-left: -0px;
}
#footer h6{
	line-height: 1.4;
}
#btn_iniciar{	    
	box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.35);
}
#btn_iniciar:hover{
	font-weight: bold;
	box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.8);
}